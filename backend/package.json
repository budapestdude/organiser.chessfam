{
  "name": "chessfam-backend",
  "version": "1.0.0",
  "description": "Backend API for ChessFam chess platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node setup-db.js && npm run backfill:tournaments && npm run seed:series && npm run seed:blogs && node dist/server.js",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "railway:migrate": "node setup-db.js && npm run build",
    "railway:start": "npm run build && npm start",
    "backfill:tournaments": "ts-node src/scripts/backfillTournamentCommunities.ts",
    "seed:series": "node seed-series.js",
    "seed:blogs": "node seed-blogs.js"
  },
  "keywords": [
    "chess",
    "api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.962.0",
    "@aws-sdk/lib-storage": "^3.962.0",
    "@sentry/node": "^10.36.0",
    "@sentry/profiling-node": "^10.36.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.0",
    "axios": "^1.13.3",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.2.0",
    "chess.js": "^1.0.0-beta.8",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "resend": "^6.8.0",
    "socket.io": "^4.8.1",
    "stripe": "^20.0.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0"
  }
}
